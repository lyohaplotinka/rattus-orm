{
  "name": "rattus-orm",
  "description": "ORM for your JS/TS apps",
  "homepage": "https://lyohaplotinka.github.io/rattus-orm/",
  "author": "Lyoha Plotinka",
  "license": "MIT",
  "packageManager": "yarn@4.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyohaplotinka/rattus-orm.git"
  },
  "bugs": {
    "url": "https://github.com/lyohaplotinka/rattus-orm/issues"
  },
  "keywords": [
    "orm",
    "rattus",
    "vuex",
    "typescript",
    "javascript"
  ],
  "scripts": {
    "test": "node scripts/test.mjs run-tests",
    "lint": "yarn workspaces foreach -A run lint",
    "lint:scripts": "eslint -c ./scripts/.eslintrc.js ./scripts/**/*.{js,mjs} --fix",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "build": "yarn workspaces foreach -Ap --exclude docs --topological-dev run build",
    "clean": "yarn workspaces foreach -A run clean && rm -rf ./scripts/compilable/dist && rm -rf node_modules",
    "release": "node ./scripts/releaser/releaser.mjs release",
    "prepare": "npx simple-git-hooks && yarn build:scripts",
    "create-package": "node ./scripts/package/createPackage.mjs",
    "build:scripts": "cd ./scripts/compilable && tsup",
    "generate-api": "node ./scripts/compilable/dist/docsBuilder.mjs"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^11.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.2.4",
    "semver": "^7.5.4",
    "simple-git-hooks": "^2.9.0",
    "size-limit": "^11.0.2",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "type-fest": "^4.10.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/lint-staged"
  }
}
