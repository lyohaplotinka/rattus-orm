{
  "name": "rattus-orm",
  "description": "ORM for your JS/TS apps",
  "homepage": "https://lyohaplotinka.github.io/rattus-orm/",
  "author": "Lyoha Plotinka",
  "license": "MIT",
  "packageManager": "yarn@4.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyohaplotinka/rattus-orm.git"
  },
  "bugs": {
    "url": "https://github.com/lyohaplotinka/rattus-orm/issues"
  },
  "keywords": [
    "orm",
    "rattus",
    "vuex",
    "typescript",
    "javascript"
  ],
  "scripts": {
    "test": "node scripts/test.mjs run-tests",
    "lint": "yarn workspaces foreach -A run lint",
    "lint:scripts": "eslint -c ./scripts/.eslintrc.js ./scripts/**/*.{js,mjs} --fix",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "build": "yarn workspaces foreach -Ap --topological-dev run build",
    "clean": "yarn workspaces foreach -A run clean",
    "release": "node ./scripts/releaser/releaser.mjs release",
    "prepare": "npx simple-git-hooks",
    "create-package": "node ./scripts/package/createPackage.mjs"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^11.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/semver": "^7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.0.2",
    "lodash-es": "^4.17.21",
    "prettier": "^3.0.0",
    "semver": "^7.5.4",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^11.0.0",
    "tslib": "^2.6.2",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "./{src,test}/*/**.ts": [
      "yarn typecheck",
      "yarn lint",
      "yarn test all"
    ],
    "./scripts/*/**.{js,mjs}": [
      "yarn lint:scripts"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/lint-staged"
  }
}
